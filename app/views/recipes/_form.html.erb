<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
      <h2 class="text-lg font-semibold mb-3"><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul class="list-disc leading-relaxed">
        <% recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :title, class: label_class %>
    <%= form.text_field :title, class: input_class %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: label_class %>
    <%= form.text_area :description, class: input_class %>
  </div>

  <div class="mb-6">
    <%= form.label :instruction, class: label_class %>
    <%= form.text_area :instruction, class: input_class %>
  </div>

  <div class="mb-6">
    <%= form.label :user_account_id, "User Account", class: label_class %>
    <%= form.collection_select :user_account_id, UserAccount.all, :id, :username, { prompt: "Select a User Account" }, class: input_class %>
  </div>

  <div class="mb-6">
    <%= form.label :image_url, "Image URL", class: label_class %>
    <%= form.text_field :image_url, class: input_class %>
  </div>

  <%= form.submit class: button_class(theme: 'primary') %>
  <% if recipe.persisted? %>
    <%= link_to "Cancel", recipe, class: "text-neutral-700 underline inline-block ml-3" %>
  <% else %>
    <%= link_to "Cancel", recipes_path, class: "text-neutral-700 underline inline-block ml-3" %>
  <% end %>
<% end %>
