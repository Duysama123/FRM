<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Recipe</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to recipes_path, class: button_class(theme: "transparent") do %>
      All Recipes
      <% end %>
      <%= link_to edit_recipe_path(@recipe), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Title:</p>
        <p><%= @recipe.title %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @recipe.description %></p>
      </li>
      <li>
        <p class="font-semibold">Instruction:</p>
        <p><%= @recipe.instruction %></p>
      </li>
      <li>
        <p>
          <strong>User Account:</strong>
          <%= @recipe.user_account.username %>  <!-- Chọn user_account thay vì user -->
        </p>
      </li>
      <li>
        <p class="font-semibold">Image url:</p>
        <p><%= @recipe.image_url %></p>
      </li>
  </ul>
</div>
